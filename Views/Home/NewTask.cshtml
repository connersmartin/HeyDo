@model HeyDo.Models.TaskItem

@{
    ViewData["Title"] = "New Task";
}

<h1>New Task</h1>

<h4>Create a new task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <br /><select asp-for="UserId" class="form-control" id="userSelect" disabled asp-items=ViewBag.UserIdList></select>
            </div>
            <input type="checkbox" id="checkUser" /> Assign Specific User?
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDetails" class="control-label"></label>
                <input asp-for="TaskDetails" class="form-control" />
                <span asp-validation-for="TaskDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewTasks">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#checkUser").click(function() {
            $("#userSelect").attr("disabled",!this.checked);
           $("#userSelect").val("");
        })
        </script>
}
