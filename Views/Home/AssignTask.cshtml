@model HeyDo.Models.UserTaskList

@{
    ViewData["Title"] = "AssignTask";
}

<h1>AssignTask</h1>

<h4>UserTaskList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserTask.TaskId" class="control-label"></label>
                <select asp-for="UserTask.TaskId" class="form-control" asp-items="Model.Tasks"></select>
                <span asp-validation-for="UserTask.TaskId" class="text-danger"></span>
            </div>
            <div class="form-group" id="time">
                <label asp-for="UserTask.SendTime" class="control-label"></label>
                <select asp-for="UserTask.SendTime" class="form-control" asp-items="Model.Times"></select>
                <span asp-validation-for="UserTask.SendTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox"  id="check" asp-for="UserTask.SendNow"/>
                <label asp-for="UserTask.SendNow" class="control-label"></label>
                <span asp-validation-for="UserTask.SendNow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserTask.UserIdAssigned" class="control-label"></label>
                <select asp-for="UserTask.UserIdAssigned" class="form-control" asp-items="Model.Users"></select>
                <span asp-validation-for="UserTask.UserIdAssigned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserTask.ContactMethod" class="control-label"></label>
                <input asp-for="UserTask.ContactMethod" class="form-control" />
                <span asp-validation-for="UserTask.ContactMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewHistory">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#check").click(function() {
            $("#time").toggle();
        })
    </script>
}
